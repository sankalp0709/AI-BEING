###############################################
# Assistant Core v3 - Environment Variables
# This is the example configuration file.
# Copy it as .env and fill your real secrets.
###############################################

##############################
# APP ENVIRONMENT
##############################
ENV=development      # development | production
BASE_URL=http://localhost:8000  # Base URL for internal API calls

##############################
# DATABASE CONFIGURATION
##############################
# Default: SQLite used for dev/local
DATABASE_URL=sqlite+aiosqlite:///./assistant_core.db

##############################
# API SECURITY
##############################
# API key for authenticating all /api routes
API_KEY=your_api_key_here

# JWT token (for optional auth module)
JWT_SECRET_KEY=your_jwt_secret_key_here

##############################
# LOGGING
##############################
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

##############################
# AI SERVICE KEYS
##############################
# Optional â€“ provide only if used
OPENAI_API_KEY=
GOOGLE_API_KEY=
GROQ_API_KEY=
MISTRAL_API_KEY=
HF_TOKEN=

##############################
# MONITORING
##############################
# Sentry error tracking (optional)
SENTRY_DSN=
