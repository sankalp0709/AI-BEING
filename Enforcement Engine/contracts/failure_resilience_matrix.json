{
  "version": "1.0",
  "goal": "ARL remains strong under disaster scenarios with graceful, deterministic outputs.",
  "scenarios": [
    {
      "name": "missing_signals",
      "input": {
        "text": "test",
        "meta": null,
        "age_state": "ALLOWED",
        "region_state": "IN",
        "platform_policy_state": "YOUTUBE"
      },
      "expected": {
        "decision": "BLOCK",
        "reason": "ENFORCEMENT_FAILURE_FAIL_CLOSED"
      },
      "guarantees": [
        "Zero crash",
        "Zero nonsense output",
        "Fail-closed behavior"
      ]
    },
    {
      "name": "conflicting_confidence",
      "input": {
        "text": "test",
        "meta": {
          "emotional_output": { "dependency_score": 0.9 },
